# -- Zsh working like Vi --
# ((remember to set up the vi-mode in the plugins line in ~/.zshrc))
# ctrl-r starts searching history backward
# Vi mode
bindkey -v
bindkey '^r' history-incremental-search-backward

# Drop the timeout for switching between modes
export KEYTIMEOUT=1

